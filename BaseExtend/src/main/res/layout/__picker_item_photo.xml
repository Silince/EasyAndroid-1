<?xml version="1.0" encoding="utf-8"?>
<com.chen.baseextend.widget.photopicker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="1dip"
        android:scaleType="centerCrop"/>
        <!--android:background="@drawable/__picker_photo_bg"-->


    <ImageView
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:src="@drawable/bg_picker_checkbox"/>

</com.chen.baseextend.widget.photopicker.widget.SquareItemLayout>
