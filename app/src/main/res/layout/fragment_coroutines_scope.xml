<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/_start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_80"
        android:background="@drawable/sel_bg_button"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_6"
        android:paddingEnd="@dimen/text_20"
        android:paddingBottom="@dimen/dimen_6"
        android:text="启动1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/_start2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_80"
        android:background="@drawable/sel_bg_button"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_6"
        android:paddingEnd="@dimen/text_20"
        android:paddingBottom="@dimen/dimen_6"
        android:text="启动2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_start1" />

    <TextView
        android:id="@+id/_start3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_80"
        android:background="@drawable/sel_bg_button"
        android:gravity="center"
        android:paddingStart="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_6"
        android:paddingEnd="@dimen/text_20"
        android:paddingBottom="@dimen/dimen_6"
        android:text="启动3"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_start2" />

</androidx.constraintlayout.widget.ConstraintLayout>