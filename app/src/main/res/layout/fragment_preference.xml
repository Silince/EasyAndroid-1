<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_22"
        android:textSize="@dimen/text_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:text="页面" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textColor="@color/gray_22"
        android:textSize="@dimen/text_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_topic"
        app:layout_constraintVertical_bias="0.1">


        <com.chen.baseextend.view.CleanableEditText
            android:id="@+id/_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:background="@drawable/bg_comment_input_radius"
            android:drawablePadding="@dimen/dimen_8"
            android:hint="存储内容"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_12"
            android:paddingTop="@dimen/dimen_7"
            android:paddingRight="@dimen/dimen_12"
            android:paddingBottom="@dimen/dimen_7"
            android:textColor="@color/gray_33"
            android:textColorHint="@color/gray_99"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="@id/img_left_icon" />

        <TextView
            android:id="@+id/_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:background="@drawable/bg_theme_4_corner"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:text="保存"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:background="@drawable/bg_theme_4_corner"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:text="取出"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:text="取出"
            android:textColor="@color/gray_22" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>