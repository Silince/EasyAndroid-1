<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_publish"
    android:orientation="vertical">

    <TextView
        android:visibility="visible"
        android:id="@+id/post_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_7"
        android:layout_marginRight="@dimen/dimen_13"
        android:drawableLeft="@mipmap/ic_collect_link"
        android:drawablePadding="@dimen/dimen_15"
        android:gravity="left"
        android:padding="@dimen/dimen_12"
        android:text="链接"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"/>

    <TextView
        android:id="@+id/post_video"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45"
        android:layout_marginLeft="@dimen/dimen_7"
        android:layout_marginRight="@dimen/dimen_13"
        android:drawableLeft="@mipmap/ic_publish_video"
        android:drawablePadding="@dimen/dimen_15"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingLeft="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_6"
        android:text="视频"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"/>

    <TextView
        android:visibility="visible"
        android:id="@+id/qr_code"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45"
        android:layout_marginLeft="@dimen/dimen_7"
        android:layout_marginRight="@dimen/dimen_13"
        android:drawableLeft="@mipmap/ic_publish_qrcode"
        android:drawablePadding="@dimen/dimen_15"
        android:gravity="left"
        android:padding="@dimen/dimen_12"
        android:text="扫一扫"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16"/>


</LinearLayout>