<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.chen.basemodule.view.round_image.RoundImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_6"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_radius="3dp"
        tools:src="@mipmap/ic_cmb_logo"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_15"
        android:drawableRight="@mipmap/ic_list_comm_gray"
        android:gravity="center_vertical"
        android:textColor="@color/gray_66"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        tools:text="招商银行"
        tools:visibility="visible" />


    <View
        android:id="@+id/label_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_05"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/divider"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.18"
        android:maxLines="3"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/text_17"
        app:layout_constraintEnd_toStartOf="@id/cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_line"
        tools:text="刚刚，微信订阅号逆天改版！到底会带" />

    <TextView
        android:id="@+id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6"
        android:layout_marginBottom="@dimen/dimen_14"
        app:layout_constraintBottom_toTopOf="@+id/divider_container"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/stick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_6"
        android:text="置顶"
        android:textColor="@color/main_theme"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/cover"
        app:layout_constraintBottom_toTopOf="@+id/divider_container"
        app:layout_constraintStart_toStartOf="@id/title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_10"
        android:text="精选"
        android:textColor="@color/main_theme_text"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/divider_container"
        app:layout_constraintStart_toEndOf="@id/stick"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/dimen_6"
        android:textColor="@color/gray_99"
        android:textSize="@dimen/text_12"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/divider_container"
        app:layout_constraintEnd_toStartOf="@+id/cover"
        app:layout_constraintStart_toEndOf="@id/recommend"
        tools:text="EaseAndroid广场·小新EaseAndroid广场·小新EaseAndroid广场·小新EaseAndroid小新EaseAndroid"
        tools:visibility="visible" />


    <com.chen.basemodule.view.round_image.RoundImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/dimen_112"
        android:layout_height="@dimen/dimen_74"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_15"
        android:src="@drawable/ic_placeholder"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/divider_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintVertical_bias="0.05"
        app:riv_borderColor="@color/gray_ef"
        app:riv_borderWidth="@dimen/dimen_02"
        tools:visibility="visible" />
    <!--app:riv_radius="@dimen/dimen_8"-->


    <LinearLayout
        android:id="@+id/divider_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_05"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@color/divider"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>