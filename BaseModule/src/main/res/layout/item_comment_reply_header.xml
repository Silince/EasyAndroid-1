<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/header"
        layout="@layout/item_info_comment"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/bg_common_gray"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_16"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_11"
        android:text="全部回复"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/dimen_14"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <TextView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_95"
        android:background="@color/white"
        android:gravity="center"
        android:text="还没有回复，快来抢沙发"
        android:textColor="@color/gray_d0"
        android:textSize="@dimen/text_14"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tip"
        app:layout_goneMarginTop="@dimen/dimen_20"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>