<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_45"
    android:background="@color/dark">

    <ImageView
        android:id="@+id/img_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:paddingTop="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_15"
        android:visibility="gone"
        tools:visibility="visible"
        android:tint="@color/white"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_left_text"
        style="@style/layout_dark_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_16"
        android:visibility="gone"
        tools:text="返回"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/tv_left_text_2"
        style="@style/layout_dark_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_16"
        android:visibility="gone"
        tools:text="关闭"
        android:paddingLeft="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_8"
        android:layout_toRightOf="@id/img_left_icon"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_center_title"
        style="@style/layout_dark_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_50"
        android:textSize="@dimen/text_19"
        tools:text="标题"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/img_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_right_text"
        style="@style/layout_dark_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_16"
        tools:text="完成"
        tools:visibility="visible"/>

</RelativeLayout>