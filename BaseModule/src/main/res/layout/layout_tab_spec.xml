<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/_tab_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_bottom_collect" />

    <View
        android:id="@+id/_dot"
        android:layout_width="@dimen/dimen_8"
        android:layout_height="@dimen/dimen_8"
        android:background="@drawable/ic_red_dot"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/_tab_image"
        android:layout_marginTop="@dimen/dimen_6"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_marginTop="@dimen/dimen_3"
        android:gravity="center"
        android:textSize="@dimen/text_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_tab_image"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="资讯"/>

</androidx.constraintlayout.widget.ConstraintLayout>