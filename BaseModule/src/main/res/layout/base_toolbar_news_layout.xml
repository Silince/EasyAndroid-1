<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_45"
    android:background="@drawable/bg_item_white_ef_line">

    <ImageView
        android:id="@+id/img_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_15"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_left_text"
        style="@style/layout_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_16"
        android:visibility="gone"
        tools:text="返回"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_center_title"
        style="@style/layout_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_45"
        android:layout_marginRight="@dimen/dimen_45"
        android:textSize="@dimen/text_18"
        android:visibility="gone"
        tools:text="标题"
        tools:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <com.chen.basemodule.view.round_image.RoundImageView
            android:id="@+id/comm_icon"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:visibility="gone"
            app:riv_radius="3dp"
            tools:src="@mipmap/ic_cmb_logo"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_comm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_data_title"
            android:textSize="@dimen/dimen_17"
            android:visibility="gone"
            tools:text="李开复"
            tools:visibility="visible" />


    </LinearLayout>


    <ImageView
        android:id="@+id/img_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_right_text"
        style="@style/layout_common_title_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_16"
        tools:text="完成"
        tools:visibility="visible" />

</RelativeLayout>