<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.18"
        android:maxLines="3"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/text_17"
        app:layout_constraintEnd_toStartOf="@id/cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="刚刚，微信订阅号逆天改版！到底会带来哪些影响？快…" />

    <TextView
        android:id="@+id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/stick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_6"
        android:text="置顶"
        android:textColor="@color/main_theme"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/base"
        app:layout_constraintStart_toStartOf="@id/title"
        tools:visibility="visible" />

    <com.chen.basemodule.view.round_image.CircleImageView
        android:id="@+id/_avatar"
        android:layout_width="@dimen/dimen_15"
        android:layout_height="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_1"
        android:src="@mipmap/ic_default_avatar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/base"
        app:layout_constraintStart_toEndOf="@id/stick"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_6"
        android:textColor="@color/gray_ac"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/base"
        app:layout_constraintStart_toEndOf="@id/stick"
        tools:text="EaseAndroid广场·小新"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingRight="@dimen/dimen_6"
        android:textColor="@color/gray_ac"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/base"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/from"
        tools:text="89评论"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/time"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_ac"
        android:textSize="@dimen/text_12"
        app:layout_constraintBaseline_toBaselineOf="@id/base"
        app:layout_constraintEnd_toStartOf="@id/status"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/_comment"
        tools:text="2018-06-03"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_theme"
        android:textSize="@dimen/text_12"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/base"
        app:layout_constraintEnd_toEndOf="@id/title"
        tools:text="未通过"
        tools:visibility="visible" />

    <com.chen.basemodule.view.round_image.RoundImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/dimen_112"
        android:layout_height="@dimen/dimen_74"
        android:layout_margin="@dimen/dimen_15"
        android:src="@drawable/ic_placeholder"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:riv_borderColor="@color/gray_ef"
        app:riv_borderWidth="@dimen/dimen_02"
        tools:visibility="visible" />
    <!--app:riv_radius="@dimen/dimen_8"-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_05"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>