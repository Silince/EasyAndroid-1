<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans00"
    android:orientation="vertical">


    <RadioGroup
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dimen_11"
        android:paddingTop="@dimen/dimen_20"
        android:paddingEnd="@dimen/dimen_11"
        android:paddingBottom="@dimen/dimen_20">

        <RadioButton
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_collect_change"
            android:button="@null"
            android:checked="true"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_26"
            android:paddingBottom="@dimen/dimen_8"
            android:text="全部"
            android:textColor="@color/collect_change_text_color" />


        <RadioButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_11"
            android:background="@drawable/bg_collect_change"
            android:button="@null"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_26"
            android:paddingBottom="@dimen/dimen_8"
            android:text="图文"
            android:textColor="@color/collect_change_text_color" />

        <RadioButton
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_11"
            android:background="@drawable/bg_collect_change"
            android:button="@null"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_26"
            android:paddingBottom="@dimen/dimen_8"
            android:text="视频"
            android:textColor="@color/collect_change_text_color" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dimen_11"
        android:paddingTop="@dimen/dimen_20"
        android:paddingEnd="@dimen/dimen_11"
        android:paddingBottom="@dimen/dimen_20"
        android:visibility="gone"
        tool:visibility="visible">

        <RadioButton
            android:id="@+id/share_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_collect_change"
            android:button="@null"
            android:checked="true"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_26"
            android:paddingBottom="@dimen/dimen_8"
            android:text="全部"
            android:textColor="@color/collect_change_text_color" />


        <RadioButton
            android:id="@+id/shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_11"
            android:background="@drawable/bg_collect_change"
            android:button="@null"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_26"
            android:paddingBottom="@dimen/dimen_8"
            android:text="已分享"
            android:textColor="@color/collect_change_text_color" />

        <RadioButton
            android:id="@+id/un_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_11"
            android:background="@drawable/bg_collect_change"
            android:button="@null"
            android:paddingLeft="@dimen/dimen_26"
            android:paddingTop="@dimen/dimen_8"
            android:paddingRight="@dimen/dimen_26"
            android:paddingBottom="@dimen/dimen_8"
            android:text="未分享"
            android:textColor="@color/collect_change_text_color" />

    </RadioGroup>


    <View
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tran_40" />


</LinearLayout>