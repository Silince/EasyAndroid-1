<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:textSize="@dimen/text_16"
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16"
        android:text="取消"
        android:textColor="@color/gray_99"/>

    <TextView
        android:textSize="@dimen/text_16"
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16"
        android:text="确定"
        android:textColor="@color/blue_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_05"
        android:background="@color/gray_ef"
        app:layout_constraintTop_toBottomOf="@id/cancel"/>

    <com.chen.basemodule.widget.wheel.WheelPicker
        android:id="@+id/wheel_cates"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_200"
        app:layout_constraintEnd_toStartOf="@id/wheel_cate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_cyclic="false"
        app:wheel_indicator="true"
        app:wheel_indicator_color="@color/divider"
        app:wheel_indicator_size="@dimen/dimen_05"
        app:wheel_item_align="center"
        app:wheel_item_text_color="@color/gray_ad"
        app:wheel_item_text_size="21sp"
        app:wheel_selected_item_text_color="@color/gray_33"/>

    <com.chen.basemodule.widget.wheel.WheelPicker
        android:id="@+id/wheel_cate"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="@dimen/dimen_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/wheel_cates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_cyclic="false"
        app:wheel_indicator="true"
        app:wheel_indicator_color="@color/divider"
        app:wheel_indicator_size="@dimen/dimen_05"
        app:wheel_item_align="center"
        app:wheel_item_text_color="@color/gray_ad"
        app:wheel_item_text_size="21sp"
        app:wheel_selected_item_text_color="@color/gray_33"/>

</androidx.constraintlayout.widget.ConstraintLayout>